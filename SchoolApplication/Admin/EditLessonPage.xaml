<Page x:Class="SchoolApplication.Admin.EditLessonSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolApplication.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditLessonSchedulePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        
        <Button Name="BtnExit"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="100"
                Height="40"
                Grid.Row="0"
                Content="Назад"
                FontSize="15"
                Margin="20 40 0 0"
                Click="BtnExit_Click"></Button>
        
        <Button Name="BtnRefresh"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="100"
                Height="40"
                Content="Обновить"
                Grid.Row="0"
                FontSize="15"
                Margin="0 40 20 0"
                Click="BtnRefresh_Click"></Button>

        <StackPanel>
            <TextBlock Margin="5"
                   Foreground="Gray"
                   FontSize="25"
                   FontWeight="Bold" 
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top">Редактирование расписания
            </TextBlock>
        </StackPanel>
       
            <DataGrid HorizontalAlignment="Center" Name="DgrEditLessons" Grid.Row="1" Height="275" AutoGenerateColumns="False" IsReadOnly="True"  VerticalAlignment="Bottom" Width="730" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding LessonName}"  Width="*"/>
                <DataGridTextColumn Header="Преподаватель" Binding="{Binding TeacherId}" Width="0.8*"/>

                <DataGridTemplateColumn Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Редактировать"
                                    Name="BtnEdit"
                                    Click="BtnEdit_Click"></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <Button Name="BtnAdd"
                Grid.Row="2" 
                HorizontalAlignment="Left"
                Width="100"
                Height="40"
                Margin="20 0 0 0"
                Click="BtnAdd_Click">Добавить</Button>
        <Button Name="BtnDelete"
                Grid.Row="2"
                Width="100"
                Height="40"
                Margin="0 0 20 0"
                HorizontalAlignment="Right"
                Click="BtnDelete_Click">Удалить</Button>
    </Grid>
</Page>
