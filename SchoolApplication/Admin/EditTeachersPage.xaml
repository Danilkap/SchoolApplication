<Page x:Class="SchoolApplication.Admin.EditTeachersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolApplication.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditTeachersPage">

    <Grid>
        <TextBlock Foreground="Black"
                   FontSize="25"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top">Информация о Marathon Skills 2016</TextBlock>

        <DataGrid HorizontalAlignment="Left" Height="141" AutoGenerateColumns="False" IsReadOnly="True"  VerticalAlignment="Center" Width="733">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Width="*"/>
                <DataGridTextColumn Header="Время" Width="0.5*"/>
                <DataGridTextColumn Header="Общее время" Width="0.5*"/>
                <DataGridTextColumn Header="Моё место" Width="0.3*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
