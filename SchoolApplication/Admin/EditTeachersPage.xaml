<Page x:Class="SchoolApplication.Admin.EditTeachersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolApplication.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="EditTeachersPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Button Name="BtnBack"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="100"
                Height="40"
                Grid.Row="0"
                Content="Назад"
                FontSize="15"
                Margin="20 40 0 0"
                Click="BtnBack_Click"></Button>

        <Button Name="BtnRefresh"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="100"
                Height="40"
                Content="Обновить"
                Grid.Row="0"
                FontSize="15"
                Margin="0 40 20 0"
                Click="BtnRefresh_Click"></Button>

        <StackPanel>
            <TextBlock Margin="5"
                   Foreground="Gray"
                   FontSize="25"
                   FontWeight="Bold"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top">Просмотр учителей
            </TextBlock>
        </StackPanel>

        <DataGrid HorizontalAlignment="Center" Name="DgrEditTeachers" Grid.Row="1" Height="275" AutoGenerateColumns="False" IsReadOnly="True"  VerticalAlignment="Center" Width="775" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding TeacherId}"  Width="0.2*"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding TeacherName}" Width="0.8*"/>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding DateOfBirth}" Width="0.4*"/>

                <DataGridTemplateColumn Width="*" Header="Фотография">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Image}"></Image>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            
            </DataGrid.Columns>
        </DataGrid>

        <Button Name="BtnAdd"
                Grid.Row="2" 
                HorizontalAlignment="Left"
                Width="100"
                Height="40"
                Margin="20 0 0 0"
                Click="BtnAdd_Click">Добавить</Button>
        <Button Name="BtnDelete"
                Grid.Row="2"
                Width="100"
                Height="40"
                Margin="0 0 20 0"
                HorizontalAlignment="Right"
                Click="BtnDelete_Click">Удалить</Button>
        <Button Name="BtnEdit"
                Grid.Row="2" 
                HorizontalAlignment="Center"
                Width="100"
                Height="40"
                Margin="20 0 0 0"
                Click="BtnEdit_Click">Редактировать</Button>
    </Grid>
</Page>
