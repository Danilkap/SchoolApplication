<Page x:Class="SchoolApplication.Student.StudentMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolApplication.Student"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentMenuPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"></ColumnDefinition>
            <ColumnDefinition Width="22*"></ColumnDefinition>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="3">
            <TextBlock Margin="5"
                   Foreground="Gray"
                   FontSize="25"
                   FontWeight="Bold"                      
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">Регистрация бегуна
            </TextBlock>
            <TextBlock TextWrapping="Wrap"
                   Foreground="Gray"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">Пожайлуста заполните всю информацию, чтобы зарегестрироваться в качестве бегуна</TextBlock>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.Row="1" Margin="0 0 0 0"
                    Height="350">

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="5 0 -75 10">
                <TextBlock Text="Email:" Margin="7" 
                           FontSize="20"/>
                <TextBox Name="TxbEmail"
                         FontSize="25"
                         Width="240"
                         Height="40"
                         />
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="5 0 -55 10">
                <TextBlock Text="Пароль:"
                           Margin="7"
                           FontSize="20"/>
                <TextBox Name="TxbPassword"
                             FontSize="25"
                             Width="240"
                             Height="40"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="5 0 7 10">
                <TextBlock Text="Повторите пароль:"
                           Margin="7"
                           FontSize="16"/>
                <PasswordBox Name="PsbConfirmationPassword"
                             Margin="0 0 7 0"
                             FontSize="25"
                             Width="242"
                             Height="40"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="5 0 -85 10">
                <TextBlock Text="Имя:" Margin="7" 
                           FontSize="20"/>
                <TextBox Name="TxbName"
                         FontSize="25"
                         Width="240"
                         Height="40"
                         />
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="5 0 -40 10">
                <TextBlock Text="Фамилия:" Margin="7" 
                           FontSize="20"/>
                <TextBox Name="TxbSurname"
                         FontSize="25"
                         Width="240"
                         Height="40"
                         />
            </StackPanel>

            <StackPanel Margin="155 40 -250 0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="BtnLogin" 
                        Content="Регистрация" 
                        Width="120"
                        Height="40"
                        Margin="7"
                        FontSize="20"/>

                <Button Name="BtnCancel" 
                        Width="120"
                        Height="40"
                        Margin="7"
                        Content="Отмена"
                        FontSize="20"/>
            </StackPanel>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="26,61,22,0" Grid.ColumnSpan="2">

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="5 0 -100 10">
                <TextBlock Text="Пол:" Margin="7" 
                           FontSize="20"/>
                <ComboBox Name="CmbGenger"
                         Width="240"
                         Height="40"
                         />
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="3 0 0 10">
                <TextBlock Text="Дата рождения:"
                           Margin="7"
                           FontSize="20"/>
                <DatePicker Name="TxbDateOfBirth"
                             Width="240"
                             Height="40"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="5 0 -75 10">
                <TextBlock Text="Страна:" Margin="7" 
                           FontSize="20"/>
                <ComboBox Name="CmbCountry"
                         Width="240"
                         Height="40"
                         />
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 10 0 0" Orientation="Horizontal">
                <Button Name="BtnPhoto" 
                        Content="Выбрать фотографию" 
                        Width="180"
                        Height="50"
                        FontSize="15"/>
                <Image
               Width="150"
               Height="120"
               Margin="5"
               HorizontalAlignment="Right"
               Name="ImgPhoto"></Image>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
