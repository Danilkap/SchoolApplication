<Page x:Class="SchoolApplication.Student.ListOfLessonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolApplication.Student"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListOfLessonPage">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Width="100" Height="100">Дата рождения:</TextBlock>
            <DatePicker Width="100" Height="100" Name="BirthPicker"></DatePicker>
        </StackPanel>

        <DataGrid HorizontalAlignment="Left" Height="141" AutoGenerateColumns="False" IsReadOnly="True"  VerticalAlignment="Center" Width="733">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Width="*"/>
                <DataGridTextColumn Header="Время" Width="0.5*"/>
                <DataGridTextColumn Header="Общее время" Width="0.5*"/>
                <DataGridTextColumn Header="Моё место" Width="0.3*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
